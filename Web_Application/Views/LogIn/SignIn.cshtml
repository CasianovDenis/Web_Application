
@model Web_Application.Models.UserData
@{
    ViewData["Title"] = "SignIn";
}


<!DOCTYPE html>
<html lang="en">
<head>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
</head>
<body>
    <h1>@ViewData["SignIn"]</h1>
    <hr />

    <div class="row">
        <div class="col-md-4">
            <form asp-action="SignIn">

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Username" class="control-label">@ViewData["User_name"]</label>
                    <input asp-for="Username" class="form-control" value="@ViewBag.save_username"/>
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Password" class="control-label">@ViewData["Password"]</label>
                    <input type="password" asp-for="Password" class="form-control" value="@ViewBag.save_password"/>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="form-check">
                    @if (ViewBag.statusbox == "false")
                    {<input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
                    }
                    else
                        @if (ViewBag.statusbox == "true")
                        {<input class="form-check-input" type="checkbox" value="" id="flexCheckDefault" checked>}
                   <label class="form-check-label" for="flexCheckDefault">@ViewData["Remember"]</label>
                </div>


                <script>
                    $(document).ready(function () {
                        $('#check_submit').hide();
                        $('#flexCheckDefault').click(function () {
                            $('#check_submit').click();
                        })
                    });
                </script>

                <p style="color:red">@ViewData["Incorectdata"]</p>
                <div class="form-group">
                    <input type="submit" value="@ViewData["SignIn"]" class="btn btn-primary" />

                </div>
            </form>

            <nav>
                <form asp-action="checkbox">
                    <input type="submit" id="check_submit" />
                </form>
            </nav>
        </div>
    </div>
</body>
</html>


